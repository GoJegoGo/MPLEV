<h1>List of Packages </h1>

<h2>Shortcuts</h2>
    <ul>
        <li><%= link_to "Add Packages", new_package_path %></li>
        <li><%= link_to "Students", students_path %></li>
        <li><%= link_to "Classes", class_catalogs_path %></li>
        <li><%= link_to "Dashboard", root_path %></li>
    </ul>
    
    <table width="100%", align="left">
        <tr>
            <th>Name</th>
            <th>Package Type</th>
            <th>Initial Price</th>
            <th>Actions</th>
        </tr>
        
            <% @packages.each do |a| %>
        <tr>
                <td><%= a.package_type %></td>
                <td><%= a.name %></td>
                <td><%= a.initial_price %></td>
                <td>
                    <%= link_to "Show", package_path(a.id) %>
                    <%= link_to "Edit", edit_package_path(a.id) %>
                    <%= link_to "Delete", package_path(a.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
        </tr>
            <% end %>
        
    </table>
