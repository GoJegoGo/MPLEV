<%= simple_form_for(@student) do |f| %>
  <%= f.input :name %>
  <%= f.input :email_ad %>
  <%= f.input :high_school %>
  <%= f.input :birthdate, start_year: Date.today.year - 110, end_year: Date.today.year %>
  <%= f.input :contact_number %>
  <%= f.input :father_name %>
  <%= f.input :mother_name %>
    <%= f.simple_fields_for :assessment do |a| %>
      <%= a.input :announcement %>
      <%= a.association :package %>
      <%= a.association :class_catalog %> 
      <%= a.input :number_of_installments, collection: [1,2,3] %>
    <% end %>
  <%= f.button :submit %>
<% end %>
