<h1>List of Students</h1>

<% @students.each do |a| %>
        <tr>
                <td><%= a.name %></td>
                <td>
                        <%= button_to "Show", admin_student_path(a.id), :method => "get" %>
                        <%= button_to "Edit", edit_admin_student_path(a.id), :method => "get" %>
                        <%= link_to "Delete", admin_student_path(a.id), method: :delete, data: { confirm: 'Are you sure?' } %>
	                <%= link_to "Add Payment", new_admin_student_payment_path(a.id) %>
		</td>
        </tr>
<% end %>

