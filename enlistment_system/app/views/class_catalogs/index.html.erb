<h1>List of Classes Offered</h1>

<h2>Shortcuts</h2>
    <ul>
        <li><%= link_to "Add Classes", new_class_catalog_path %></li>
        <li><%= link_to "Students", students_path %></li>
        <li><%= link_to "Packages", packages_path %></li>
        <li><%= link_to "Dashboard", root_path %></li>
    </ul>

<table width="150%", align="left">
        <tr>
            <th>Venue Address</th>
            <th>Max Slots</th>
            <th>Slots Taken</th>
            <th>Time Start</th>
            <th>Time End</th>
            <th>Date Start</th>
            <th>Date End</th>
            <th>Subject List</th>
            <th>Actions</th>
        </tr>
        
            <% @class_catalogs.each do |a| %>
        <tr>
                <td><%= a.venue_address %></td>
                <td><%= a.max_slots %></td>
                <td><%= a.slots_taken %></td>
                <td><%= a.time_start %></td>
                <td><%= a.time_end %></td>
                <td><%= a.date_start %></td>
                <td><%= a.date_end %></td>
                <td><%= a.subject_list %></td>
                <td>
                    <%= button_to "Show", class_catalog_path(a.id), :method => "get" %>
                    <%= button_to "Edit", edit_class_catalog_path(a.id), :method => "get" %>
                    <%= link_to "Delete", class_catalog_path(a.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
        </tr>
       
            <% end %>
        
</table>